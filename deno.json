{
    "unstable": [
        "sloppy-imports"
    ],
    "compilerOptions": {
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "@core/jsx",
        "strict": true,
        "types": [
            "npm:vite/client"
        ]
    },
    "imports": {
        "@/": "./src/",
        "@core/": "./src/core/",
        "@design-system/": "./src/design-system/",
        "@components/": "./src/components/",
        "@plugins/": "./src/plugins/",
        "@utils/": "./src/utils/"
    },
    "lint": {
        "rules": {
            "exclude": [
                "no-sloppy-imports"
            ]
        }
    },
    "tasks": {
        "dev": "deno run -A npm:vite --config vite.config.demo.ts",
        "build": "deno run -A npm:vite build",
        "build-demo": "deno run -A npm:vite build --config vite.config.demo.ts",
        "test": "deno test -A"
    }
}